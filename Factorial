#include<stdio.h>

long factorial(int n)
{
    if (n == 0)
        return 1;
    else
        return(n * factorial(n-1));
}

void main()
{
    int num;
    long fact;
    printf("Digite un numero: ");
    scanf("%d", &num);

    fact = factorial(num);
    printf("El factorial es %d is %ld\n", num, fact);
    return 0;
}
